<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="ComplexityBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/complexity_bar</item>
        <item name="android:minHeight">28dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>

    <style name="circularImageView">
        <item name="cornerSize">50% </item>
    </style>

    <style name="MenuStyle">
        <item name="fontFamily">@font/rubik_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="progressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_background</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_background</item>
    </style>

    <style name="roundedOverlay" parent="">
        <item name="cornerSize">100%</item>
    </style>
</resources>